# Copy to .env and fill values

# MySQL (use either DSN or discrete fields)
# MYSQL_DSN=mysql+pymysql://user:%21Passw0rd%23@127.0.0.1:3306/resumes
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DB=resumes

# Gemini API
GEMINI_API_KEY=
GEMINI_API_URL=https://your-gemini-endpoint.example/v1
GEMINI_SMALL_MODEL=gemini-small-multimodal
GEMINI_LARGE_MODEL=gemini-large-multimodal

# Embeddings
EMBEDDING_MODEL=gen-embedding-mini

# App
FILE_STORAGE_PATH=./data/raw_files
MAX_PARSE_TOKENS=12000

# Skill taxonomy (optional JSON file path - leave empty for defaults)
SKILL_TAXONOMY_PATH=
# Example: SKILL_TAXONOMY_PATH=./skill_taxonomy.json

# Google Search for skill taxonomy builder
GOOGLE_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=


# Parsing thresholds (optional - defaults shown)
LLM_CONFIDENCE_THRESHOLD=0.7
CGPA_MISMATCH_THRESHOLD=0.2
MAX_SUMMARY_SENTENCES=10
MAX_UNKNOWN_SKILLS=5
LONG_DOC_WORD_THRESHOLD=2000

# API Server
API_HOST=localhost
API_PORT=8000
